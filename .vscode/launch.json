    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Polar",
            "configurations": ["API", "Worker", "Client"],
            "stopAll": true
        }
    ],
    "configurations": [
        {
            "name": "API",
            "type": "python",
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            },
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/server",
            "args": [
                "polar.app:app",
                "--reload",
                "--workers",
                "1",
                "--host",
                "127.0.0.1",
                "--port",
                "8000"
            ],
            "justMyCode": false,
        },
        {
            "name": "Worker",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "cwd": "${workspaceFolder}/server",
            "preLaunchTask": "ngrok tunnel",
            "args": [
                "-A",
                "run_worker:app",
                "worker",
            ],
            "justMyCode": false,
        },
        {
            "name": "Client",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/clients",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "run",
                "dev"
            ],
        }
    ]
}