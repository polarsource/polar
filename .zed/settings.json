{
  "languages": {
    "Python": {
      "language_servers": ["pyright", "ruff", "!pylsp"],
      "format_on_save": "on",
      "wrap_guides": [88],
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "TypeScript": {
      "format_on_save": "on"
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python": {
          "pythonPath": "server/.venv/bin/python"
        }
      }
    }
  }
}
