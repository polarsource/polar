{
  "languages": {
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "TypeScript": {
      "format_on_save": "on"
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python": {
          "pythonPath": "server/.venv/bin/python"
        }
      }
    },
    "pylsp": {
      "settings": {
        "plugins": {
          "mypy": {
            "enabled": true,
            "overrides": [
              "--python-executable",
              "/home/fvoron/Development/polar/server/.venv/bin/python",
              true
            ]
          }
        }
      }
    }
  }
}
