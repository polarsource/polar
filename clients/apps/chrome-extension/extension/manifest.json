{
    "name": "Polar Browser Extension",
    "version": "0.0.1",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "declarativeNetRequest"
    ],
    "declarative_net_request": {
        "rule_resources": [{
            "id": "csp",
            "enabled": true,
            "path": "csp.json"
        }]
    },
    "host_permissions": [
        "*://github.com/*/*/issues*"
    ],
    "content_scripts": [
        {
            "run_at": "document_end",
            "js": ["content.js"],
            "matches": [
                "*://github.com/*/*/issues*"
            ]
        },
        {
            "js": ["auth.js"],
            "matches": [
                "*://dashboard.polar.sh/settings/extension",
                "http://127.0.0.1/settings/extension"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["index.css"],
            "matches": ["*://github.com/*"]
        }
    ]
}
