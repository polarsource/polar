{
  "name": "Polar Browser Extension",
  "version": "0.0.1",
  "manifest_version": 3,
  "permissions": ["storage", "webNavigation", "scripting"],
  "host_permissions": [
    "https://github.com/",
    "*://api.polar.sh/*",
    "http://127.0.0.1:8000/*"
  ],
  "content_scripts": [
    {
      "run_at": "document_end",
      "js": ["content.js"],
      "matches": [
        "*://github.com/*/*/issues",
        "*://github.com/*/*/issues?*",
        "*://github.com/*/*/issues/*"
      ]
    },
    {
      "js": ["auth.js"],
      "matches": [
        "*://dashboard.polar.sh/dashboard/settings/extension",
        "http://127.0.0.1:3000/dashboard/settings/extension"
      ]
    }
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["frame.css", "app.css"],
      "matches": ["*://github.com/*"]
    }
  ]
}
