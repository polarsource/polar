{
    "name": "Polar Chrome Extension",
    "version": "0.0.1",
    "manifest_version": 3,
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "run_at": "document_end",
            "js": ["content.js"],
            "matches": [
                "https://github.com/*/*/issues",
                "https://github.com/*/*/issues?*",
                "https://github.com/*/*/issues/*"
            ]
        },
        {
            "js": ["auth.js"],
            "matches": ["http://127.0.0.1:3000/settings/extension"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["index.css"],
            "matches": ["https://github.com/*"]
        }
    ]
}
