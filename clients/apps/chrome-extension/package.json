{
  "name": "chrome-extension",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "polarkit": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-frame-component": "^5.2.6",
    "react-scripts": "5.0.1",
    "typescript": "5.0.4",
    "use-chrome-storage": "^1.2.1",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run build:js && npm run build:css",
    "build:prod": "API_URL=https://api.polar.sh WEB_URL=https://dashboard.polar.sh npm run build",
    "build:css": "tailwindcss -i ./src/frame.css -o ./extension/frame.css && cp src/app.css ./extension",
    "build:js": "webpack --config webpack.config.js && mv dist/content.js ./extension && mv dist/auth.js ./extension && mv dist/content_script_on_soft_nav.js ./extension",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/chrome": "^0.0.233",
    "css-loader": "^6.7.3",
    "style-loader": "^3.3.2",
    "svg-inline-loader": "^0.8.2",
    "tailwindcss": "^3.1.8",
    "ts-loader": "^9.4.2",
    "url-loader": "^4.1.1",
    "webpack": "^5.79.0",
    "webpack-cli": "^5.0.1"
  }
}
