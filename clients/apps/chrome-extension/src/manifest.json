{
  "name": "Polar",
  "version": "0.0.1",
  "description": "Adds Polar data to GitHub",
  "manifest_version": 3,
  "icons": {
    "16": "Icon_16.png",
    "32": "Icon_32.png",
    "48": "Icon_48.png",
    "128": "Icon_128.png"
  },
  "permissions": ["storage", "webNavigation", "scripting"],
  "host_permissions": ["https://github.com/", "https://api.polar.sh/"],
  "content_scripts": [
    {
      "run_at": "document_end",
      "js": ["content.js"],
      "matches": [
        "https://github.com/*/*/issues",
        "https://github.com/*/*/issues?*",
        "https://github.com/*/*/issues/*"
      ]
    },
    {
      "js": ["auth.js"],
      "matches": ["https://dashboard.polar.sh/dashboard/settings/extension"]
    }
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["frame.css"],
      "matches": ["https://github.com/*"]
    }
  ]
}
