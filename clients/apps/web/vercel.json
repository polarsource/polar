{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "cd ../.. && turbo run build --filter=web",
  "git": {
    "deploymentEnabled": {
      "main": false
    }
  },
  "redirects": [
    {
      "source": "/:client_secret(spaire_cl_.*)",
      "destination": "https://api.spairehq.com/v1/checkout-links/:client_secret/redirect",
      "has": [{ "type": "host", "value": "buy.spairehq.com" }],
      "permanent": false
    },
    {
      "source": "/:path*",
      "destination": "https://spairehq.com/:path*",
      "has": [{ "type": "host", "value": "buy.spairehq.com" }],
      "permanent": false
    },
    {
      "source": "/",
      "destination": "https://spairehq.com/",
      "has": [{ "type": "host", "value": "buy.spairehq.com" }],
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/_mintlify/api/:path+",
      "destination": "https://spaire.mintlify.app/_mintlify/api/:path+"
    },
    {
      "source": "/api/request",
      "destination": "https://spaire.mintlify.app/_mintlify/api/request"
    },
    {
      "source": "/docs",
      "destination": "https://spaire.mintlify.dev/docs"
    },
    {
      "source": "/docs/llms.txt",
      "destination": "https://spaire.mintlify.app/llms.txt"
    },
    {
      "source": "/docs/llms-full.txt",
      "destination": "https://spaire.mintlify.app/llms-full.txt"
    },
    {
      "source": "/docs/sitemap.xml",
      "destination": "https://spaire.mintlify.app/sitemap.xml"
    },
    {
      "source": "/docs/robots.txt",
      "destination": "https://spaire.mintlify.app/robots.txt"
    },
    {
      "source": "/docs/:path*",
      "destination": "https://spaire.mintlify.dev/docs/:path*"
    },
    {
      "source": "/mintlify-assets/:path+",
      "destination": "https://spaire.mintlify.app/mintlify-assets/:path+"
    },
    {
      "source": "/ingest/static/(.*)",
      "destination": "https://us-assets.i.posthog.com/static/$1"
    },
    {
      "source": "/ingest/(.*)",
      "destination": "https://us.i.posthog.com/$1"
    }
  ],
  "trailingSlash": false
}
