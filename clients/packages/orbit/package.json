{
  "name": "@polar-sh/orbit",
  "version": "0.1.0",
  "description": "Orbit â€” Design system for Polar",
  "author": "Polar",
  "license": "Apache-2.0",
  "type": "module",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/polarsource/polar.git",
    "directory": "clients/packages/orbit"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "prebuild": "pnpm run tokens:build",
    "build": "rm -rf dist && tsup",
    "tokens:build": "ORBIT_DIR=$(dirname \"$npm_package_json\") && pnpm --filter @polar-sh/shift exec node bin/shift.js build --input \"$ORBIT_DIR/tokens/**/*.yaml\" --output \"$ORBIT_DIR/src/tokens\" --format 'ts,ts-vars'",
    "lint": "prettier -c .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "facehash": "^0.1.0",
    "framer-motion": "^12.34.0",
    "lucide-react": "^0.564.0",
    "next-themes": "^0.4.6",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@polar-sh/shift": "workspace:*",
    "@polar-sh/typescript-config": "workspace:*",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "tsup": "^8.5.1",
    "typescript": "latest"
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  }
