{
  "name": "@polar-sh/sdk",
  "version": "0.5.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./openapi": "./dist/openapi/source.json"
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "download": "node scripts/generate-schema.js http://127.0.0.1:8000/openapi.json openapi/source.json openapi/updated.json",
    "generate": "pnpm download && ./generate",
    "build": "tsup src/index.ts --format cjs,esm --dts && cp -r openapi dist && node scripts/dereference-schema.js dist/openapi/source.json",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@stoplight/json-ref-resolver": "^3.1.6",
    "tsconfig": "workspace:*",
    "tsup": "^7.2.0",
    "typescript": "5.3.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
