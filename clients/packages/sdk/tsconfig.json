{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": "src/",
    "allowSyntheticDefaultImports": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "paths": {
      "@/*": ["./*"],
      "@polarkit/lib/*": ["./lib/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "build", "node_modules", "openapi", "scripts"]
}
