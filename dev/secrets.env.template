# Polar Development Secrets
# Copy to ~/.config/polar/secrets.env and fill in values
#
# This file is used to share secrets across multiple Git worktrees.
# Run ./dev/setup-environment to automatically merge these into server/.env

# GitHub OAuth - create app at https://github.com/settings/apps
# Or run: ./dev/setup-environment --setup-github-app
POLAR_GITHUB_CLIENT_ID=
POLAR_GITHUB_CLIENT_SECRET=
POLAR_GITHUB_APP_WEBHOOK_SECRET=
POLAR_GITHUB_APP_IDENTIFIER=
POLAR_GITHUB_APP_PRIVATE_KEY=
POLAR_GITHUB_APP_NAMESPACE=

# GitHub Repository Benefits App (usually same as above)
POLAR_GITHUB_REPOSITORY_BENEFITS_APP_NAMESPACE=
POLAR_GITHUB_REPOSITORY_BENEFITS_APP_IDENTIFIER=
POLAR_GITHUB_REPOSITORY_BENEFITS_APP_PRIVATE_KEY=
POLAR_GITHUB_REPOSITORY_BENEFITS_CLIENT_ID=
POLAR_GITHUB_REPOSITORY_BENEFITS_CLIENT_SECRET=

# Stripe - from https://dashboard.stripe.com/test/apikeys
POLAR_STRIPE_SECRET_KEY=
POLAR_STRIPE_PUBLISHABLE_KEY=
POLAR_STRIPE_WEBHOOK_SECRET=
POLAR_STRIPE_CONNECT_WEBHOOK_SECRET=
