    "version": "0.2.0",
    "compounds": [
        {
            "name": "Polar (Server)",
            "configurations": ["API", "Worker"],
            "stopAll": true
        }
    ],
    "configurations": [
        {
            "name": "API",
            "type": "python",
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            },
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "polar.app:app",
                "--reload",
                "--workers",
                "1",
                "--host",
                "127.0.0.1",
                "--port",
                "8000"
            ],
            "justMyCode": false,
        },
        {
            "name": "Worker",
            "type": "python",
            "request": "launch",
            "module": "arq",
            "args": [
                "run_worker.WorkerSettings",
                "--watch",
                "polar",
            ],
            "justMyCode": false,
        }
    ]
}
