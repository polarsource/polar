{
  "languages": {
    "Python": {
      "language_servers": ["pyright", "!basedpyright", "ruff", "!pylsp"],
      "format_on_save": "on",
      "wrap_guides": [88],
      "formatter": [
        { "code_action": "source.organizeImports.ruff" },
        { "code_action": "source.fixAll.ruff" },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    }
  }
}
