{
  "name": "react-email-pkg",
  "version": "1.0.0",
  "private": true,
  "readme": "README.md",
  "main": "dist/index.global.js",
  "bin": "dist/index.global.js",
  "scripts": {
    "dev": "email dev --dir src/emails",
    "clean": "rm -rf dist bin",
    "types": "uv --directory .. run python -m polar.email.schemas | openapi-typescript --output src/types/openapi.ts",
    "build": "pnpm run clean && tsup && pkg package.json",
    "format_check": "prettier src/** --check",
    "format_write": "prettier src/** --write"
  },
  "packageManager": "pnpm@10.5.2",
  "dependencies": {
    "@react-email/components": "^0.5.6",
    "@react-email/render": "^1.3.2",
    "commander": "^14.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@react-email/preview-server": "^4.3.0",
    "@types/node": "^22.18.8",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@yao-pkg/pkg": "^6.8.0",
    "openapi-typescript": "^7.10.1",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "react-email": "^4.3.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "pkg": {
    "targets": [
      "host"
    ],
    "outputPath": "bin"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  }
}
