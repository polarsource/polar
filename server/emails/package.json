{
  "name": "react-email-pkg",
  "version": "1.0.0",
  "private": true,
  "readme": "README.md",
  "main": "dist/index.global.js",
  "bin": "dist/index.global.js",
  "scripts": {
    "dev": "email dev --dir src/emails",
    "clean": "rm -rf dist bin",
    "build": "pnpm run clean && tsup && pkg package.json",
    "format_check": "prettier src/** --check",
    "format_write": "prettier src/** --write"
  },
  "packageManager": "pnpm@10.5.2",
  "dependencies": {
    "@react-email/components": "^0.5.1",
    "@react-email/render": "^1.2.1",
    "commander": "^13.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@react-email/preview-server": "^4.2.8",
    "@types/node": "^22.18.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@yao-pkg/pkg": "^6.6.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "react-email": "^4.2.8",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "pkg": {
    "targets": [
      "host"
    ],
    "outputPath": "bin"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  }
}
